<div id="login">
    <h2 class="active login-heading pointer"> sign in </h2>

    <h2 class="inactive login-heading pointer"> sign up </h2>
    <form>
        <span class="login-text">Username</span>
        <input type="text" class="text" name="username">

        <br />

        <span class="login-text">Password</span>
        <input type="password" class="text" name="password">

        <br />
        <div class="absolute">
            <input id="sign-in-checkbox" type="checkbox" class="custom-checkbox" />
            <label for="sign-in-checkbox" class="label-format">Keep me signed in</label>
        </div>

        <button class="signin">Sign In</button>

        <hr>

        <a href="#">Forgot Password?</a>
    </form>
</div>