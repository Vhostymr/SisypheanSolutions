<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*<link rel="shortcut icon" href="/SisypheanSolutions/favicon.ico" type="image/x-icon">*@
    @Styles.Render("~/bundles/styles")
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="routing">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="home"><a href="#home">Home</a></li>
                        <li class="file-manager"><a href="#file-manager">File Manager</a></li>
                        <li class="news-feed"><a href="#news-feed">News</a></li>
                        <li class="about"><a href="#about">About</a></li>
                        <li class="contact"><a href="#contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="navbar-offset-top body-content">
            @RenderBody()
        </div>

        <div class="container-fluid">
            <div class="footer-container">
                <div class="footer">
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year Brandon Hurler</p>
                    </footer>
                </div>
            </div>
        </div>

        @RenderSection("scripts", required: false)
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/scripts")
    </div>
</body>
</html>
