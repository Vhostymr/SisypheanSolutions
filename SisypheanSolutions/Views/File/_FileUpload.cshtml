<link href="@Url.Content("~/Content/CSS/file-upload.css")" rel="stylesheet" />

<div id="file-upload-section" class="container">
    <h2>File Manager<br /><small>The easy way to securely share files.</small></h2>
    <form id="file-upload-form" action="/file/fileupload" method="post" enctype="multipart/form-data">
        <div class="row margin-top margin-bottom">
            <div class="col-sm-6">
                <input id="encrypted" name="encrypted" type="checkbox" />
                <label for="encrypted"><span>Encrypted</span></label>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="input-group margin-bottom">
                    <span class="input-group-btn">
                        <span class="btn btn-primary btn-file">
                            Browse… <input id="browse" type="file" name="files" multiple="multiple">
                        </span>
                    </span>

                    <input id="filefeedback" type="text" class="form-control" readonly="">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <button id="submit-button" type="button" class="btn btn-primary btn-submit has-spinner" style="margin-right:1em; width:89px;">
                    <span id="uploadGlyph" class="glyphicon glyphicon-upload"></span>
                    Upload
                </button>
            </div>
        </div>
    </form>
</div>

<script src="@Url.Content("~/Scripts/file-upload.js")"></script>